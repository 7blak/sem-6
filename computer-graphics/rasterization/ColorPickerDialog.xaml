<Window x:Class="rasterization.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rasterization"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Pick a Color" Height="200" Width="300">
    <StackPanel Margin="10">
        <xctk:ColorPicker Name="colorPicker" Margin="0,0,0,10" />
        <Button Content="OK" Click="Ok_Click" HorizontalAlignment="Right" Width="60" />
    </StackPanel>
</Window>
