<Window x:Class="_3D_Rendering.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3D_Rendering"
        mc:Ignorable="d"
        Title="3D Rendering" Height="1000" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Canvas Width="800" Height="800" Name="RenderCanvas" Background="Black" Grid.Row="0" />
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5">
            <TextBlock Text="Distance:" VerticalAlignment="Center" Foreground="Black"/>
            <Slider Name="SliderDistance" Minimum="-20" Maximum="20" Value="5" Width="150" Margin="5"/>
            <TextBlock Text="Rotate X:" VerticalAlignment="Center" Foreground="Black"/>
            <Slider Name="SliderRotX" Minimum="-180" Maximum="180" Value="0" Width="150" Margin="5"/>
            <TextBlock Text="Rotate Y:" VerticalAlignment="Center" Foreground="Black"/>
            <Slider Name="SliderRotY" Minimum="-180" Maximum="180" Value="0" Width="150" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
