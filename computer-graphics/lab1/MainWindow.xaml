<Window x:Class="lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="4" DockPanel.Dock="Top" FontSize="14">
            <MenuItem Header="File">
                <MenuItem Header="Open file..." Click="OpenFile_Click"/>
                <MenuItem Header="Save file..." Click="SaveFile_Click"/>
            </MenuItem>
            <MenuItem Header="Function Filters">
                <MenuItem Header="Invert Colors" Click="InvertColors"/>
                <MenuItem Header="Brightness Correction" Click="BrightnessCorrection"/>
                <MenuItem Header="Contrast Enhancement" Click="ContrastEnhancement"/>
                <MenuItem Header="Gamma Correction" Click="GammaCorrection"/>
            </MenuItem>
            <MenuItem Header="Convolution Filters">
                <MenuItem Header="Blur" Click="Blur"/>
                <MenuItem Header="Gaussian Blur" Click="GaussianBlur"/>
                <MenuItem Header="Sharpen" Click="Sharpen"/>
                <MenuItem Header="Edge Detection" Click="EdgeDetection"/>
                <MenuItem Header="Emboss" Click="Emboss"/>
                <Separator/>
                <MenuItem Header="Custom filter..." Click="CustomFilter_Click"/>
            </MenuItem>
            <MenuItem Header="Reset Image" Click="ResetImage"/>
        </Menu>
        <Image x:Name="OriginalImage" Grid.Column="0" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top"/>
        <Image x:Name="FilteredImage" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top"/>
    </Grid>
</Window>