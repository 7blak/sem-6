<Window x:Class="lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600" WindowStyle="ThreeDBorderWindow" MinHeight="300" MinWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="2" FontSize="14" Background="Black" Foreground="White">
            <MenuItem Header="File">
                <MenuItem Header="Open file..." Click="OpenFile_Click" Foreground="Black"/>
                <MenuItem Header="Save file..." Click="SaveFile_Click" Foreground="Black"/>
            </MenuItem>
            <MenuItem Header="Filters" Foreground="White">
                <MenuItem Header="Function Filters" Foreground="Black">
                    <MenuItem Header="Invert Colors" Click="InvertColors"/>
                    <MenuItem Header="Brightness Correction" Click="BrightnessCorrection"/>
                    <MenuItem Header="Contrast Enhancement" Click="ContrastEnhancement"/>
                    <MenuItem Header="Gamma Correction" Click="GammaCorrection"/>
                </MenuItem>
                <MenuItem Header="Convolution Filters" ItemsSource="{Binding ConvolutionFilters}" Foreground="Black">
                    <MenuItem.ItemContainerStyle>
                        <Style TargetType="MenuItem">
                            <Setter Property="Header" Value="{Binding Name}"/>
                            <EventSetter Event="Click" Handler="CustomFilterApply_Click"/>
                        </Style>
                    </MenuItem.ItemContainerStyle>
                </MenuItem>
                <MenuItem Header="Morphological Filters" Foreground="Black">
                    <MenuItem Header="Erosion" Click="ApplyErosion_Click"/>
                    <MenuItem Header="Dilation" Click="ApplyDilation_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Edit Convolution Filter..." Click="CustomFilter_Click" Foreground="Black"/>
                <MenuItem Header="Reset Convolution Filters" Click="ResetCustomFilters_Click" Foreground="Black"/>
            </MenuItem>
            <MenuItem Header="Reset Image" Click="ResetImage_Click"/>
        </Menu>
        <ScrollViewer Grid.Row="1"  Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Image x:Name="OriginalImage" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="None"/>
            </ScrollViewer>
        <ScrollViewer Grid.Row="1" Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Image x:Name="FilteredImage" HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="None"/>
        </ScrollViewer>
    </Grid>
</Window>