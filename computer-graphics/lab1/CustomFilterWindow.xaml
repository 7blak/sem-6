<Window x:Class="lab1.CustomFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1"
        mc:Ignorable="d"
        Title="Custom filter creator" Height="500" Width="500" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="Rows:" VerticalAlignment="Center" Margin="0 0 5 0"/>
            <ComboBox x:Name="RowsComboBox" Width="60" SelectionChanged="RowsColumnsChanged"/>
            <TextBlock Text="Columns:" VerticalAlignment="Center" Margin="10 0 5 0"/>
            <ComboBox x:Name="ColumnsComboBox" Width="60" SelectionChanged="RowsColumnsChanged"/>
            <TextBlock Text="Preset:" VerticalAlignment="Center" Margin="160,0,5,0"/>
            <ComboBox x:Name="PresetComboBox" Width="60" SelectionChanged="PresetChanged"/>
        </StackPanel>

        <Grid x:Name="DataGrid" Grid.Row="1" Background="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="2">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Divisor:" VerticalAlignment="Center" Margin="0 0 5 0"/>
                <TextBox x:Name="DivisorTextBox" Width="100" LostFocus="ValidateDivisor"/>
                <CheckBox x:Name="AutoComputeCheckbox" Content="Auto Compute" Margin="10 0 0 0" Checked="AutoComputeChecked" Unchecked="AutoComputeChecked"/>
                <TextBlock x:Name="WarningIcon" Text="!" Foreground="Red" FontWeight="Bold" HorizontalAlignment="Center" Margin="5,0" Visibility="Collapsed" VerticalAlignment="Center"/>
                <ToolTipService.ToolTip>
                    <ToolTip Content="The automatic value computed was 0, replacing with 1" />
                </ToolTipService.ToolTip>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Offset:" VerticalAlignment="Center" Margin="0 0 5 0"/>
                <TextBox x:Name="OffsetTextBox" Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 10" Background="Wheat">
                <TextBlock Text="Anchor X:" VerticalAlignment="Center" Margin="0 0 5 0"/>
                <TextBox x:Name="XTextBox" Width="100"/>
                <TextBlock Text="Anchor Y:" VerticalAlignment="Center" Margin="10 0 5 0"/>
                <TextBox x:Name="YTextBox" Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                <Button Content="Cancel" Click="CancelButton_Click" Width="100" Margin="5"/>
                <Button Content="Create" Click="CreateButton_Click" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
